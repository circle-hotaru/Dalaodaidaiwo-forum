// 数据列表卡片
.box-list-card
  width: 100%
  box-shadow: none !important
  margin-bottom: 20px 
  .el-card__body
    display: flex
    justify-content space-between 
    align-items: center
    padding: 15px 20px
    .left
      font-size: 16px
      .title
        margin-left: 5px

// 表单卡片
.box-form-card
  max-width: 520px
  box-shadow: none !important
  .el-upload, .title, .el-input
    margin-bottom 30px
  .title
    font-size: 18px
  .el-input
    width: 70%

// 分页       
.page
  text-align: right
  margin-top: 20px
  margin-bottom: 50px
  .el-pagination
    padding: 2px 0
    .btn-next
      margin-right: 0

// 上传组件
.avatar-uploader .el-upload 
  border: 1px dashed #d9d9d9
  border-radius: 6px
  cursor: pointer
  position: relative
  overflow: hidden
.avatar-uploader .el-upload:hover 
  border-color: #409eff
.avatar-uploader-icon, .banner-uploader-icon 
  font-size: 28px
  color: #8c939d
  width: 100px
  height: 100px
  line-height: 100px
  text-align: center
.avatar 
  width: 100px
  height: 100px
  display: block
.banner-uploader-icon
  width: 200px
  height: 100px
.banner
  width: 200px
  height: 100px
  display: block

// 头像下拉框
.el-dropdown-menu
  left: auto !important
  right 20px !important
  text-align: center
  .is-disabled.adminname
    color: #E6A23C
    font-weight: 700

// 弹出框
@media screen and (max-width: 450px)
  .el-message-box
    width: 300px 
  .el-message
    min-width: 300px 